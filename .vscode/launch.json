{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
         {
            "name": "Script: import_x_bookmarks",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/fury_api/src/fury_api/scripts/import_x_bookmarks.py",
            "args": [
                "--organization-id",
                "1",
                "--plugin-id",
                "29",
                "--max-results",
                "50",
                "--fetch-all",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/fury_api",
            "python": "${workspaceFolder}/fury_api/.venv/bin/python",
            "justMyCode": false
        },
        {
            "name": "Script: import_author_tweets",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/fury_api/src/fury_api/scripts/import_author_tweets.py",
            "args": [
                "--username",
                "cavi_jointleman",
                "--total-tweets",
                "50",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/fury_api",
            "python": "${workspaceFolder}/fury_api/.venv/bin/python",
            "justMyCode": false
        },
        {
            "name": "Module: fury_api",
            "type": "debugpy",
            "request": "launch",
            "module": "fury_api",
            "python": "${workspaceFolder}/fury_api/.venv/bin/python",
            "cwd": "${workspaceFolder}/fury_api/src",
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Webapp: next dev",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "run",
                "dev",
                "--port",
                "3001"
            ],
            "cwd": "${workspaceFolder}/halo_webapp",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 2
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch API + Webapp",
            "configurations": [
                "Module: fury_api",
                "Webapp: next dev"
            ],
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 3
            }
        }
    ]
}
