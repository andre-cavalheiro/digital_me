{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Module: fury_api",
            "type": "debugpy",
            "request": "launch",
            "module": "fury_api",
            "python": "${workspaceFolder}/fury_api/.venv/bin/python",
            "cwd": "${workspaceFolder}/fury_api/src",
            "justMyCode": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Webapp: next dev",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "run",
                "dev",
                "--port",
                "3001"
            ],
            "cwd": "${workspaceFolder}/halo_webapp",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 2
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch API + Webapp",
            "configurations": [
                "Module: fury_api",
                "Webapp: next dev"
            ],
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 3
            }
        }
    ]
}
